catch (HttpClientErrorException.NotFound ex) {
    String responseMessage = ex.getResponseBodyAsString();
    JsonNode rootNode = convertResponseToJsonNode(responseMessage);


    JsonNode firstChildResponse = rootNode.path("errors").path(0);

    // Checking the existence of the code in the first child and comparing its value
    if ("".equals(firstChildResponse.path("code").asText())) {
        return endpointResponseData;
    }

    // If the code is not "", throw an exception
    throw new Exception(ex);
}